<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revisa la información antes de publicar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifica que los datos sean correctos.\nSi todo está bien, tu estacionamiento se mostrará en la app para que otros puedan reservarlo."
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="6dp" />


        <!-- Tarjeta: Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:text="Nombre del estacionamiento"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtNombre"
                android:text="Estacionamiento ejemplo"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!-- Tarjeta: Dirección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Dirección"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtDireccion"
                android:text="Ahuateno, Teziutlán, CP 73967"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!-- Tarjeta: Precios y capacidad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Información del estacionamiento"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCapacidad"
                android:text="Capacidad: 10 autos"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtPrecio"
                android:text="Precio por hora: $15 MXN"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtHorario"
                android:text="Horario: 08:00 AM - 10:00 PM"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!-- Tarjeta: Ubicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Ubicación seleccionada"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtCoordenadas"
                android:text="Lat: 19.433 / Lon: -99.133"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Progress + Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:progress="100"
                android:max="100"
                android:progressTint="@color/melon"
                android:layout_marginTop="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/btnAtras"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Atrás"
                    android:textColor="#777"
                    android:textSize="17sp"
                    android:padding="12dp"
                    android:clickable="true" />

                <Button
                    android:id="@+id/btnPublicar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/melon"
                    android:text="Publicar estacionamiento"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
